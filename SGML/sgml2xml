F=`basename $1 .sgm`
D=`dirname $1`
echo read $F.sgm
perl cleanSGML.pl < $D/$F.sgm | \
osx -ccatalog -xno-nl-in-tag -xcomment -xempty -xno-expand-internal - > $F.xmllike
cp tcpentities.dtd intEntities.dtf 
perl -p -i -e 's/UNIT="&V;&s;e/UNIT="Vse/g' $F.xmllike
xmllint --dropdtd --noent --encode utf-8 --format $F.xmllike > $F.xml
rm $F.xmllike
echo wrote $F.xml
